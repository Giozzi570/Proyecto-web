---
import Vacio from './vacio/vacio.astro'
import Skills from '../components/skills.astro';
---

<main id="Projects" class="h-auto w-full bg-slate-950">
    <h3 class="text-center text-white text-3xl p-8 underline">Proyectos</h3> 
    <section class="grid gap-10 text-white m-auto w-4/5 justify-center ">
        <article class="bg-slate-800 border-2 border-slate-700 rounded-xl w-full h-full flex-col flex items-center col-span-full row-span-3 md:col-span-5 md:row-span-3 ">
            <h4 class="p-4 text-lg">PÃ¡gina huerta automatizada</h4>
            <div class="h-[1px] bg-slate-100 w-4/5 mb-4 "></div>
            <div class="overflow-hidden border-2 w-4/5 flex-1 m-4 rounded-2xl">
                <img id="scale" class="rounded-2xl h-full object-cover" src="../huerta-automatizada.netlify.app_ (10).png" alt=""></div>
            <div class="h-[1px] bg-slate-100 w-4/5 mt-4"></div>
            <button class="bg-transparent p-2 mb-2 mt-2 rounded-2xl hover:bg-slate-700 transition"><a class="opacity-70" href="https://huerta-automatizada.netlify.app/" target="_blank" rel="noopener noreferrer">Observar Proyecto</a></button>
        </article>
        <article class="bg-slate-800 border-2 border-slate-700 rounded-xl w-full h-full flex flex-col-reverse gap-20 justify-center items-center  row-span-3 col-span-full md:col-span-5 md:row-span-2 "></article>
        <article class="bg-slate-800 border-2 border-slate-700 rounded-xl w-full h-full flex flex-col-reverse gap-20 justify-center items-center row-span-3 col-span-full md:col-span-5 md:row-span-3 "></article>
        <article class="bg-slate-800 border-2 border-slate-700 rounded-xl w-full h-full flex flex-col-reverse gap-20 justify-center items-center row-span-3 col-span-full md:col-span-5 md:row-span-2 "></article> 
</main>
<style>
    section{
        grid-template-rows:repeat(6, minmax(200px, 1fr));
        grid-template-columns:repeat(10, minmax(0,1fr));
    }
    button:hover > a{
        opacity: 1;
        transition: 300ms all;
    }
    button{
        transition: 300ms all;
    }
    a{
        transition: 300ms all;
    }
    #scale:hover{
        scale: 1.3;
        transition: 600ms scale;
    }
    #scale{
        transition: 300ms all;
    }
    @media (max-width: 768px){
    section{
        grid-template-rows:repeat(13, minmax(200px, 1fr));
        grid-template-columns:repeat(10, minmax(0,1fr));}
    }
</style>
